{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Depurar locally.exe (GDB + Make)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/locally.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe", // ⬅️ Ajusta según tu instalación
            "setupCommands": [
                {
                    "description": "Habilitar impresión bonita (pretty printing)",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build-makefile"
        }
    ]
}
